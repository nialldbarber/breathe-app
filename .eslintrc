{
  "extends": ["react-native-wcandillon"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "import/resolver": {
      "babel-module": {},
      "node": {
        "extensions": [".js", ".jsx", ".json", ".native.js"]
      }
    }
  },
  "env": {
    "jest": true
  },
  "rules": {
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true
      }
    ],
    "max-line-length": [
      true,
      {
        "limit": 200,
        "ignore-pattern": "^import [^,]+ from |^export | implements"
      }
    ]
  }
}
